<div class="container" style="background-color: #F6DB2D;">
  <%= form_with url: items_path, method: :get, class: "sticky-search" do %>
  <i class="fa-solid fa-magnifying-glass icon-left icon-search"></i>
  <%= text_field_tag :query,
      params[:query],
      class: "margin-search",
      placeholder: ""%>
  <i class="fa-solid fa-list-ul icon-right icon-search"></i>
  <% end %>

  <div class="row justify-content-center item-container">
    <div class="col-sm-8 test-bg">
      <div id="items">
        <% @items.each do |item| %>
            <h3><%= link_to item.name, new_item_booking_path(item.id), class: "text-color" %></h3>
            <strong><%= item.condition %> </strong><br>
            <%= item.description %> <br>
            <%= item.category %> <br>
            <img style="width: 50%; padding-bottom: 50px;" src='<%= "#{item.item_picture}" %>' alt='<%= "#{item.name}" %>'>
        <% end %>
      </div>
    </div>
</div>
